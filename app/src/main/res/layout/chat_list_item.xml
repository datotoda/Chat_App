<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <ImageView
        android:id="@+id/chatListItemProfileImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@string/app_name"
        tools:ignore="ImageContrastCheck"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/chatListItemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/chatListItemProfileImageView"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Giorgi" />

    <TextView
        android:id="@+id/chatListItemTextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatListItemNameTextView"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/chatListItemProfileImageView"
        tools:text="you: hello!" />

    <TextView
        android:id="@+id/chatListTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatListItemNameTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:text="18:15" />


</RelativeLayout>